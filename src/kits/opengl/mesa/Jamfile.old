		3dnow_normal.S
		sse.c
		sse_xform1.S
		sse_xform2.S
		sse_xform3.S
		sse_xform4.S
		sse_normal.S
		read_rgba_span_x86.S

		t_vertex_sse.c

		x86sse.c
		;

	Includes [ FGristFiles $(arch_sources) ] : <mesa>matypes.h ;

	SEARCH_SOURCE += [ FDirName $(SUBDIR) x86 rtasm ] ;

} else if $(TARGET_ARCH) = ppc {

	arch_sources = 
		common_ppc.c
		t_vtx_generic.c
		;

} else if $(TARGET_ARCH) = sparc {

	arch_sources = 
		sparc.c 
		t_vtx_generic.c 
		;

} else {
	arch_sources = t_vtx_generic.c ;
}


